
<h1><%- title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/inv/newClassification" method="post">

    <label for="classification_name">Classification Name: </label><br>
    <span>No spaces or special characters allowed.</span>
    <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]*$"><br>

    <input type="submit" value="Add Classification">
</form>